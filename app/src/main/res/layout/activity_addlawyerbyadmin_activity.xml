<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:background="#555555"
    tools:context=".addlawyerbyadmin_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/purewhitebackground"
            android:padding="20dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logodesign"></ImageView>

            <TextView
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/image"
                android:fontFamily="sans-serif-condensed"
                android:text="Legal Consultant"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                ></TextView>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <ListView
            android:id="@+id/view_cat_LV"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:textAlignment="center"
            android:autofillHints="@color/colorBlack"
            ></ListView>

        <Button
            android:id="@+id/add_lawyer"
            android:layout_width="243dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/but_t"
            android:clickable="true"
            android:gravity="center"
            android:text="goto add Category of lawyer"
            android:textColor="#ffffff"
            android:textStyle="bold"></Button>
    </LinearLayout>
    </LinearLayout>
</ScrollView>