<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedBackFromUserActivity"
    android:orientation="vertical"
    android:background="#555555">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/purewhitebackground"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logodesign"></ImageView>

        <TextView
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/image"
            android:fontFamily="sans-serif-condensed"
            android:text="Legal Consultant"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            ></TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#ffffff"
        android:gravity="center">
        <EditText
            android:id="@+id/Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter Subject Of The Case"
            android:textColorHint="@color/colorBlack"
            android:textColor="#000000"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Give Feedback To Lawyer"
            android:textColorHint="@color/colorBlack"
            android:textColor="#000000"
            android:maxLines="5"
            android:textSize="15sp" />
        <RatingBar
            android:id="@+id/Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="3"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="false"
            android:max="5"
            />
        <Button
            android:id="@+id/btn_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:text="Submit"
            android:layout_margin="50dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"></Button>
    </LinearLayout>
</LinearLayout>